{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run PHPUnit Tests",
      "type": "php",
      "request": "launch",
      "program": "${workspaceFolder}/vendor/bin/phpunit",
      "args": [
        "--configuration",
        "${workspaceFolder}/phpunit.xml"
      ],
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "php"
    },
    {
      "name": "Run PHPUnit Current Test",
      "type": "php",
      "request": "launch",
      "program": "${workspaceFolder}/vendor/bin/phpunit",
      "args": [
        "--configuration",
        "${workspaceFolder}/phpunit.xml",
        "${file}"
      ],
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "php"
    },
    {
      "name": "Run PHPStan Analysis",
      "type": "php",
      "request": "launch",
      "program": "${workspaceFolder}/vendor/bin/phpstan",
      "args": [
        "analyse",
        "--configuration",
        "${workspaceFolder}/phpstan.neon"
      ],
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "php"
    },
    {
      "name": "Run PHP CS Fixer",
      "type": "php",
      "request": "launch",
      "program": "${workspaceFolder}/vendor/bin/php-cs-fixer",
      "args": [
        "fix",
        "--config=${workspaceFolder}/.php-cs-fixer.php",
        "--verbose"
      ],
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "php"
    }
  ]
}
