{
  "//": "Configuración PHP",
  "php.suggest.basic": false,
  "php.validate.enable": false,

  "//": "Intelephense - Autocompletado PHP",
  "intelephense.environment.phpVersion": "8.0.0",
  "intelephense.files.exclude": [
    "**/.git/**",
    "**/.svn/**",
    "**/.hg/**",
    "**/CVS/**",
    "**/.DS_Store/**",
    "**/node_modules/**",
    "**/bower_components/**",
    "**/vendor/**/{Test,test,Tests,tests}/**"
  ],
  "intelephense.format.enable": true,
  "intelephense.telemetry.enabled": false,

  "//": "Formateo PHP con PSR-12",
  "[php]": {
    "editor.defaultFormatter": "junstyle.php-cs-fixer",
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.rulers": [120]
  },

  "//": "PHPStan - Análisis estático nivel 8",
  "phpstan.enabled": true,
  "phpstan.level": "8",
  "phpstan.configFile": "./phpstan.neon",
  "phpstan.enableStatusBar": true,

  "//": "PHP CS Fixer - Autoformateo",
  "php-cs-fixer.executablePath": "${workspaceFolder}/vendor/bin/php-cs-fixer",
  "php-cs-fixer.onsave": true,
  "php-cs-fixer.config": ".php-cs-fixer.php",
  "php-cs-fixer.allowRisky": false,
  "php-cs-fixer.pathMode": "override",
  "php-cs-fixer.exclude": [
    "vendor"
  ],

  "//": "PHPUnit - Tests",
  "phpunit.php": "php",
  "phpunit.phpunit": "${workspaceFolder}/vendor/bin/phpunit",
  "phpunit.args": [
    "--configuration",
    "phpunit.xml"
  ],
  "phpunit.colors": true,

  "//": "Asociaciones de archivos",
  "files.associations": {
    "*.blade.php": "blade",
    ".php-cs-fixer.php": "php",
    ".php-cs-fixer.dist.php": "php",
    "*.neon": "yaml"
  },

  "//": "Archivos excluidos del explorador",
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/vendor": false,
    "**/node_modules": true,
    "**/.phpunit.result.cache": true,
    "**/.php-cs-fixer.cache": true
  },

  "//": "Archivos excluidos de búsqueda",
  "search.exclude": {
    "**/vendor": true,
    "**/node_modules": true,
    "**/.phpunit.result.cache": true,
    "**/.php-cs-fixer.cache": true,
    "**/composer.lock": true,
    "**/.git": true
  },

  "//": "Editor general",
  "editor.rulers": [120],
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.minimap.enabled": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,

  "//": "TODO Tree - Encuentra TODOs en el código",
  "todo-tree.general.tags": [
    "TODO",
    "FIXME",
    "HACK",
    "NOTE",
    "BUG",
    "XXX"
  ],
  "todo-tree.highlights.defaultHighlight": {
    "icon": "alert",
    "type": "text",
    "foreground": "#ffffff",
    "iconColour": "#ffcc00"
  },
  "todo-tree.highlights.customHighlight": {
    "TODO": {
      "icon": "check",
      "iconColour": "#3498db"
    },
    "FIXME": {
      "icon": "alert",
      "iconColour": "#e74c3c"
    },
    "BUG": {
      "icon": "bug",
      "iconColour": "#e74c3c"
    },
    "NOTE": {
      "icon": "note",
      "iconColour": "#2ecc71"
    }
  },

  "//": "GitLens - Superpoderes Git",
  "gitlens.codeLens.enabled": true,
  "gitlens.currentLine.enabled": true,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.statusBar.enabled": true,

  "//": "Error Lens - Muestra errores inline",
  "errorLens.enabled": true,
  "errorLens.enabledDiagnosticLevels": [
    "error",
    "warning"
  ],

  "//": "Markdown",
  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "yzhang.markdown-all-in-one",
    "editor.wordWrap": "on"
  },
  "markdown.preview.fontSize": 14,

  "//": "JSON",
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.formatOnSave": true
  },

  "//": "Terminal",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.fontFamily": "Menlo, Monaco, 'Courier New', monospace",

  "//": "Breadcrumbs",
  "breadcrumbs.enabled": true,

  "//": "Otros",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "explorer.confirmDelete": true,
  "explorer.confirmDragAndDrop": false
}
